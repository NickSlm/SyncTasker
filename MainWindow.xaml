<Window x:Class="ToDoListPlus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDoListPlus"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <DockPanel Margin="10">
        <ListBox Name="lbToDoList" HorizontalContentAlignment="Stretch" DockPanel.Dock="Top">
            <ListBox.Resources>
                <Style TargetType="Button">
                    <Setter Property="Margin" Value="2,0"/>
                </Style>
                <Style TargetType="TextBox">
                    <Setter Property="Margin" Value="2,0"/>
                </Style>
                <Style TargetType="CheckBox">
                    <Setter Property="Margin" Value="2,0"/>
                </Style>
            </ListBox.Resources>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0,3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="24"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>
                        <CheckBox Grid.Column="0"></CheckBox>
                        <TextBox Grid.Column="1" Text="{Binding Title}" IsReadOnly="{Binding IsReadOnly}"/>
                        <Button Grid.Column="2" Click="ToggleReadOnly" >Edit</Button>
                        <Button Grid.Column="3" Click="RemoveFromList">Remove</Button>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </DockPanel>

</Window>
