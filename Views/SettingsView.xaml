<UserControl x:Class="ToDoListPlus.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ToDoListPlus.Views"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="300">

    <UserControl.Resources>
        <Style TargetType="Label">
            <Setter Property="FontFamily"
                    Value="Segoe UI" />
            <Setter Property="FontSize"
                    Value="13" />
            <Setter Property="VerticalAlignment"
                    Value="Center" />
            <Setter Property="Foreground"
                    Value="{DynamicResource MaterialDesignBody}" />
        </Style>
        <Style TargetType="Separator">
            <Setter Property="Background"
                    Value="{DynamicResource MaterialDesignDivider}" />
            <Setter Property="Height"
                    Value="1" />
            <Setter Property="Margin"
                    Value="0,8" />
        </Style>
    </UserControl.Resources>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel MinHeight="300"
                    MinWidth="320"
                    MaxWidth="480"
                    Margin="16">

                    <Expander Header="Appearance"
                              IsExpanded="True"
                              Style="{StaticResource MaterialDesignExpander}"
                              Margin="0,0,0,16">
                        <Grid Margin="0,8,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="160" />
                            </Grid.ColumnDefinitions>

                            <Label Content="Theme:"
                                   Grid.Row="0"
                                   Grid.Column="0"
                                   Margin="0,0,8,8" />
                            <StackPanel Grid.Column="1"
                                        Grid.Row="0"
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Center"
                                        Margin="0,0,0,8">
                                <materialDesign:PackIcon Kind="WeatherSunny"
                                                         VerticalAlignment="Center"
                                                         Width="20"
                                                         Height="20"
                                                         Margin="0,0,8,0"
                                                         Foreground="{DynamicResource MaterialDesignBody}" />
                                <ToggleButton Width="50"
                                              Height="24"
                                              ToolTip="Light/Dark"
                                              Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                              Command="{Binding UpdateThemeCommand}"
                                              IsChecked="{Binding IsDarkTheme}" />

                                <materialDesign:PackIcon Kind="WeatherNight"
                                                         VerticalAlignment="Center"
                                                         Width="20"
                                                         Height="20"
                                                         Margin="8,0,0,0"
                                                         Foreground="{DynamicResource MaterialDesignBody}" />
                            </StackPanel>


                            <StackPanel Grid.Row="2"
                                        Grid.ColumnSpan="2"
                                        Margin="0,0,0,8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>


                                    <Label Content="Task In Progress"
                                           Grid.Column="0"
                                           Margin="0,0,8,8" />
                                    <xctk:ColorPicker Grid.Column="1"
                                                      DisplayColorAndName="True"
                                                      SelectedColor="{Binding InProgressTaskColor}" />
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Label Content="Task Failed"
                                           Grid.Column="0"
                                           Margin="0,0,8,8" />
                                    <xctk:ColorPicker Grid.Column="1"
                                                      DisplayColorAndName="True"
                                                      SelectedColor="{Binding FailedTaskColor}" />
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Label Content="Task Complete"
                                           Grid.Column="0"
                                           Margin="0,0,8,8" />
                                    <xctk:ColorPicker Grid.Column="1"
                                                      DisplayColorAndName="True"
                                                      SelectedColor="{Binding CompletedTaskColor}" />
                                </Grid>

                    </StackPanel>
                        </Grid>
                    </Expander>

                    <!-- Hotkeys -->
                    <Expander Header="Hotkeys"
                              IsExpanded="False"
                              Style="{StaticResource MaterialDesignExpander}"
                              Margin="0,0,0,16">
                        <Grid Margin="0,8,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="160" />
                            </Grid.ColumnDefinitions>

                            <Label Grid.Row="0"
                                   Content="Toggle overlay:"
                                   Margin="0,0,8,8"
                                   VerticalAlignment="Center" />
                            <TextBox Grid.Row="0"
                                     Grid.Column="1"
                                     Text="{Binding _keyStrokes[Overlay].keyStroke}"
                                     Tag="Overlay"
                                     PreviewKeyDown="KeyBind_PreviewKeyDown"
                                     IsReadOnly="True"
                                     Cursor="Hand"
                                     Style="{StaticResource OutlookTextBoxStyle}"
                                     Margin="0,0,0,8" />

                            <Label Grid.Row="1"
                                   Content="Create new task:"
                                   Margin="0,0,8,0"
                                   VerticalAlignment="Center" />
                            <TextBox Grid.Row="1"
                                     Grid.Column="1"
                                     Text="{Binding _keyStrokes[NewTask].keyStroke}"
                                     Tag="NewTask"
                                     PreviewKeyDown="KeyBind_PreviewKeyDown"
                                     IsReadOnly="True"
                                     Cursor="Hand"
                                     Style="{StaticResource OutlookTextBoxStyle}"
                                     Margin="0,0,0,0" />
                        </Grid>
                    </Expander>

                    <!-- Overlay -->
                    <Expander Header="Overlay"
                              IsExpanded="False"
                              Style="{StaticResource MaterialDesignExpander}"
                              Margin="0,0,0,16">
                        <Grid Margin="0,8,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="160" />
                            </Grid.ColumnDefinitions>

                            <Label Content="Overlay position:"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,8" />
                            <ComboBox Grid.Column="1"
                                      Margin="0,0,0,8"
                                      ItemsSource="{Binding PositionOptions}"
                                      SelectedItem="{Binding OverlayPos, Mode=TwoWay}"
                                      Style="{StaticResource OutlookComboBoxStyle}" />
                        </Grid>
                    </Expander>

                    <!-- Action Buttons -->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,8,0,0">
                        <Button Content="SAVE"
                                IsDefault="True"
                                Margin="8,0"
                                Width="88"
                                Style="{StaticResource OutlookButtonStyle}"
                                Command="{Binding SaveSettingsCommand}" />
                        <Button Content="CANCEL"
                                IsCancel="True"
                                Margin="8,0"
                                Width="88"
                                Style="{StaticResource OutlookButtonStyle}"
                                Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}" />
                    </StackPanel>
            </StackPanel>

        </ScrollViewer>
</UserControl>
