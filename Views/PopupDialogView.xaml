<Window x:Class="ToDoListPlus.Views.PopupDialogView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDoListPlus.Views"
        mc:Ignorable="d"
        Title="Add Task" Height="250" Width="400">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Task:"/>
        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding TaskTitle}"/>
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Due Date (optional):"/>
        <DatePicker Grid.Row="1" Grid.Column="1"/>
        
        <Button Grid.Row="2" Grid.Column="0" Content="Save" Command="{Binding SaveCommand}" Width="80"/>
        <Button Grid.Row="2" Grid.Column="1" Content="Cancel" Command="{Binding CancelCommand}" Width="80"/>

    </Grid>
</Window>
