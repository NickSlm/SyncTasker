<Window x:Class="ToDoListPlus.Views.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDoListPlus.Views"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Title="Login" Height="350" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#FAFAFA" ResizeMode="NoResize" WindowStyle="None">
    
    <Border BorderBrush="#DDD" BorderThickness="1" CornerRadius="10" Margin="20">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- App Logo or Title -->
            <StackPanel Grid.Row="0" Margin="0,10" HorizontalAlignment="Center">
                <TextBlock Text="ToDoList Plus"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#333"/>
                <TextBlock Text="Welcome! Sign in to continue."
                           FontSize="14"
                           Foreground="#777"
                           Margin="0,4,0,0"/>
            </StackPanel>

            <!-- Sign in with Microsoft -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button Command="{Binding AuthorizationCommand}" Padding="10,5"
                        Background="White" BorderBrush="#DDD" BorderThickness="1"
                        Cursor="Hand">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Image Source="D:\Projects\ToDoListPlus\Assets\Icons\microsoftIcon.png"/>
                        <TextBlock Text="Sign in with Microsoft"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"
                                   Foreground="#2F2F2F"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <!-- Close Button -->
            <Button Grid.Row="2" Content="×"
                    HorizontalAlignment="Right" VerticalAlignment="Top"
                    Background="Transparent" BorderBrush="Transparent"
                    FontSize="16" Foreground="#888"
                    Command="{Binding CloseCommand}"/>
        </Grid>
    </Border>
</Window>
